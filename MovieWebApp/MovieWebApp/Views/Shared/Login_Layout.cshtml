<!DOCTYPE html>
<html>
<head>
    <title>Movie Web App</title>
    <style>
        /* 전체 페이지 스타일링 */
        body {
            margin: 0;
            padding: 0;
            background-image: url('/images/Netflix_background.jpg'); /* 배경 이미지 설정 */
            background-size: cover;
            background-position: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        /* 로그인/회원가입 폼 스타일링 */
        .login-container {
            width: 380px;
            margin: 0 auto;
            padding: 40px;
            background-color: rgba(0, 0, 0, 0.7); /* 폼 배경 투명도 설정 */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* 그림자 효과 */
            text-align: center;
            margin-top: 100px; /* 원하는 여백 크기를 픽셀 단위로 설정하세요 */
        }

            .login-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .login-container label {
                display: block;
                text-align: left;
                margin-bottom: 5px;
            }

            .login-container input[type="text"],
            .login-container input[type="password"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .login-container input[type="submit"] {
                background-color: #007BFF;
                color: white;
                border: none;
                border-radius: 5px;
                padding: 10px;
                cursor: pointer;
            }

                .login-container input[type="submit"]:hover {
                    background-color: #0056b3;
                }

            .login-container .register-link {
                font-size: 14px;
                margin-top: 10px;
            }

        audio {
            display: none;
        }
    </style>
</head>
<!--Constantia, Comic Sans MS, fantasy-->
<body>
	<div class="login-container">
        <audio controls="controls" autoplay>
			<source src="~/images/Netflix.mp3" type="audio/mpeg" />
		</audio>
  
        <label style="color:wheat; font-family: Gabriola; font-size: 90px; text-align: center; font-weight: bold">VIEWtiful</label>

        @RenderBody()
        <label style="color:white; font-size: 30px; text-align: center;">로그인</label>
        <form asp-action="Index" method="post">
            <div>
                <label for="Address" style="color:white">아이디:</label>
                <input type="text" id="Address" name="Address" />
            </div>
            <div>
                <label for="Pw" style="color:white">비밀번호:</label>
                <input type="password" id="Pw" name="Pw" />
            </div>
            <br />
            <div>
                <input type="submit" value="로그인" />
            </div>
        </form>
        <form asp-action="User" method="get">
            <input type="submit" value="회원가입" class="register-link" />
        </form>
        <br />
        <label style="font-size:20px; font-family: Candara; font-weight: bold; color: red">아이디와 비밀번호를 정확히 입력해주세요</label>
    </div>
</body>
</html> 