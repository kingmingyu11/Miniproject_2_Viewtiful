@model Review

@{
    ViewData["Title"] = "ReviewDelete";
}

<style>
    body {
        background-color: black;
        color: white;
    }
</style>
<h1 class="navbar-brand" id="ex1" style="font-family: Gabriola; font-size: 60px; color: #ff0000; text-align: center;" asp-area="" asp-controller="Home" asp-action="Index">VIEWtiful</h1>

<form asp-action="ReviewEdit" onsubmit="return confirm('정말 삭제하시겠습니까?');">
    <div class="text-center">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contents)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contents)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Writer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Writer)
            </dd>
        </dl>
    </div>
</form>
<form asp-action="ReviewDelete">
    <input type="hidden" asp-for="Id" />
    <div class="text-center">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Reviewboard" style="color: white;">리뷰목록으로 돌아가기</a>
    </div>
</form>